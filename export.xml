<project name="sudoku" default="export" basedir=".">
    <description>
        Exports all artifacts generated by maven to zip file.
        TODO: ideally this should be done by maven.
    </description>


    <target name="zip" description="generate zip" >
        <mkdir dir="target" />
        <delete file="target/sudoku.zip" quiet="true"/>
        <zip destfile="target/sudoku.zip">
            <zipfileset dir="sudoku-mw/target" includes="*.war" />
            <zipfileset  dir="sudoku-mw/target/jbehave/view" prefix="reports/jbehave/" excludes="META-INF/,i18n/,ftl/"/>
            <zipfileset dir="sudoku-mw/target/site/jacoco" prefix="reports/jacoco/mw" />
            <zipfileset dir="sudoku-dao/target/site/jacoco" prefix="reports/jacoco/dao"/>
        </zip>
    </target>


    <target name="export" description="generate the distribution">
        <!-- TODO: add scp to target server and services stop start -->
    </target>

</project>